<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.schoollabs.mykeys"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.schoollabs.mykeys.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.schoollabs.mykeys.UserRegisteringTheInSystemActivity"
            android:label="@string/title_activity_user_registering_the_in_system" />
        <activity
            android:name="br.schoollabs.mykeys.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name="br.schoollabs.mykeys.NewKeyActivity"
            android:label="@string/title_activity_new_key" />
        <activity
            android:name="br.schoollabs.mykeys.ListKeyActivity"
            android:label="@string/title_activity_list_key" />
        <activity
            android:name="br.schoollabs.mykeys.NewCategoryActivity"
            android:label="@string/title_activity_new_category" />
        <activity
            android:name="br.schoollabs.mykeys.SettingsActivity"
            android:label="@string/action_settings" >
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- created by WilliamRodrigues at 2013-07-29 10:24:51 -->
        <activity
            android:name="br.schoollabs.mykeys.BackupRestoreActivity"
            android:label="@string/title_activity_backup_restore" >
        </activity>
    </application>

</manifest>
