<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageListKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/labelNone"
        android:src="@drawable/ic_key" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/labelLinearHomeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/labelLinearHomeCategory"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/labelListKeyUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+id/labelListKeyUser"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/labelListKeyPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+id/labelListKeyPassword"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</LinearLayout>